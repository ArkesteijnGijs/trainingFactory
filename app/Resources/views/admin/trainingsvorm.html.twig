{% block stylesheets %}
    <link rel="stylesheet" href="/web/css/HealthOne.css">
    <link rel="stylesheet" href="/web/css/bootstrap.min.css">
{% endblock %}

{% block javascripts %}
    <script src="/js/bootstrap.min.js"></script>
{% endblock %}

{% block body %}
    <nav class="navbar navbar-default" style="color: #4cae4c;" >
        <div class="navbar-header" style="background-color: black" >
            <p style="margin-left: 1700px"></p></br>
            <p class="navbar-brand" style="color: white">Training Factory Den Haag</p>
            <img style="display: block;
                margin-left: auto;
                margin-right: auto;
                width: 20%;"
                 class="card-img-top" src="../../../web/images/logo1.png">
        </div>
        <div class="container-fluid" style="background-color: black;">
            <ul class="nav navbar-nav">
                <li><a href="home">Home</a></li>
                <li class="active"><a href="trainingsvorm">Trainingsvorm</a></li>
                <li><a href="begeleiders">Begeleiders</a></li>
                <li><a href="leden">Leden</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="../logout"><span class="glyphicon glyphicon-user"></span> Uitloggen</a></li>
            </ul>
        </div>

    </nav>
    <div class="container">
        <h1>Trainingsvormen</h1>
        <table id="table" class="table">
            <thead>
            <tr>
                <th>Naam</th>
                <th>Beschrijving</th>
                <th>Tijdsduur</th>
                <th>Extra kosten</th>

            </thead>
            <tbody>

            {% for t in trainingsform %}
                <tr>
                    <td>{{ t.name }}</td>
                    <td>{{ t.description }}</td>
                    <td>{{ t.duration|date("d-m-y") }}</td>
                    <td>{{ t.extracosts }}</td>
                    <td>
                        <a href="trainingsvormWijzigen/{{ t.id }}" style="color: black;"><button id="ledenToevoegen" class="glyphicon glyphicon-edit"></button></a>
                    </td>
                    <td>
                        <a href="trainingsvormVerwijderen/{{ t.id }}" style="color: black;"><button id="ledenoevoegen" class="glyphicon glyphicon-trash"></button></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <button id="memberToevoegen" class="btn btn-primary"><a href="trainingsvormAdd" style="color: white;">Trainingsvorm Toevoegen</a></button>
    </div>
{% endblock %}