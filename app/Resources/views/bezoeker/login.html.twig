
{% block stylesheets %}
    <link rel="stylesheet" href="/web/css/HealthOne.css" xmlns="http://www.w3.org/1999/html">
    <link rel="stylesheet" href="/web/css/bootstrap.min.css">
{% endblock %}

{% block javascripts %}
    <script src="/js/bootstrap.min.js"></script>
{% endblock %}
{% block body %}
<nav class="navbar navbar-default" style="color: #4cae4c;" >
    <div class="navbar-header" style="background-color: black" >
        <p style="margin-left: 1700px"></p></br>
        <p class="navbar-brand" style="color: white">Training Factory Den Haag</p>
        <img style="display: block;
                margin-left: auto;
                margin-right: auto;
                width: 20%;"
             class="card-img-top" src="../../../web/images/logo1.png">
    </div>
    <div class="container-fluid" style="background-color: black;">
        <ul class="nav navbar-nav">
            <li class="active"><a href="home">Home</a></li>
            <li><a href="trainingsvormen">Trainingsvormen</a></li>
            <li><a href="contact">Contact</a></li>
            <li><a href="gedrag">Gedragsregels</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li ><a href="../logout"><span class="glyphicon glyphicon-log-in"></span> Registreren</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li ><a href="login"><span class="glyphicon glyphicon-user"></span> Login</a></li>
        </ul>


    </div>

</nav>

<div class="container">
<form id="form" class="form-horizontal" action="{{ path('login') }}" method="post">
    <table>
        <caption>Inloggen</caption>
        <tr>
            <td>Gebruikersnaam:</td>
            <td>
                <input type="text" autocomplete="off" id="username" placeholder="Vul uw gebruikersnaam in" name="_username" value="{{ last_username }}" required="required"/>
            </td>
        </tr>
        <tr>
            <td>Wachtwoord:</td>
            <td>
                <input type="password" autocomplete="off" id="password" name="_password" placeholder="Vul uw wachtwoord in" required="required"/>
            </td>
        </tr>

        <tr>
            <td></td>
            <td>
                <input type="submit" value="inloggen"><input type="reset" value="reset"/>
            </td>
        </tr>
    </table>
</form>
</div>
{% endblock %}
{%  if error %}
    <div>{{ error.messageKey|trans(error.messageData, "security") }}</div>
{% endif %}